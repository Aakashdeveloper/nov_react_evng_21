/////////
inline > start in same line
> span , a, img
block > start from new line
> p, div

////////
inline
styleTag 
stylesheet

inline>styleTag>stylesheet

inline
{
    color:Red,
    text-align:center,
}

styleTag
{
    color:orange,
    font-size:30px
}

stylesheet
{
    color:green,
    text-align:right,
    font-size:40px,
    border: 2px solid
}


{
   color:Red,
   text-align:center, 
   font-size:30px,
   border: 2px solid
}


